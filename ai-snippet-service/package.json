{
  "name": "ai-snippet-service",
  "version": "1.0.0",
  "main": "dist/src/server.js",
  "description": "AI-powered snippet summary service with Express backend and Remix frontend",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "nodemon --exec ts-node src/server.ts",
    "dev:ui": "remix dev --port 3030",
    "build": "npm run build:api && npm run build:ui",
    "build:api": "tsc",
    "build:ui": "remix build",
    "start": "concurrently \"npm run start:api\" \"npm run start:ui\"",
    "start:api": "node dist/src/server.js",
    "start:ui": "remix-serve build --port 3030",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src app --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:test": "./scripts/test.sh",
    "docker:build": "./scripts/build.sh"
  },
  "keywords": [
    "ai",
    "snippet",
    "service",
    "remix",
    "openai"
  ],
  "author": "Glaucia Lemos <Twitter: glaucia_lemos86>",
  "license": "MIT",
  "dependencies": {
    "@remix-run/dev": "^2.17.0",
    "@remix-run/node": "^2.17.0",
    "@remix-run/react": "^2.17.0",
    "@remix-run/serve": "^2.17.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "isbot": "^4",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "openai": "^5.11.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
